<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="LibraryBundle\Entity\Book" table="book">
    <unique-constraints>
      <unique-constraint name="UNIQ_CBE5A3318AA0DA28" columns="isbn13"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="authorId" type="integer" column="author_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="isbn13" type="string" column="isbn13" length="13" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="categoryId" type="integer" column="category_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="price" type="decimal" column="price" precision="2" scale="0" nullable="false"/>
  </entity>
</doctrine-mapping>
